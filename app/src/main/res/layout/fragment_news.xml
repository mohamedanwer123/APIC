<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cm.socialapp.Fragments.News"
    android:orientation="vertical"
   >



    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/logo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/news_fregment_imgpost"/>

                        <EditText
                            android:layout_gravity="center"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:textColor="#fff"
                            android:hint="Write Something"
                            android:drawableLeft="@drawable/pen"
                            android:textColorHint="#fff"
                            android:drawablePadding="20dp"
                            android:background="@drawable/post_edittext"
                            android:id="@+id/news_fregment_edittext"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>




    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/news_fregment_listview"
        />


</LinearLayout>
