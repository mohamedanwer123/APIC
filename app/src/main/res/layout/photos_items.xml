<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:adroid="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
      app:cardBackgroundColor="@color/colorPrimaryDark"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/anwer"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   android:id="@+id/photos_items_profile_img"
                   android:layout_marginBottom="10dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20dp"
                   android:textColor="#fff"
                   android:text="Mohamed"
                   android:layout_marginTop="23dp"
                   android:layout_marginLeft="20dp"
                   adroid:id="@+id/photos_items_name"
                   />

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   adroid:id="@+id/photos_items_menu"
                   android:background="@drawable/update_menu"
                   android:layout_gravity="right"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="110dp"/>

           </LinearLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Mohamed"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:padding="10dp"
                adroid:id="@+id/photos_items_des"
                android:background="@drawable/post_data"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/anwer"
                android:id="@+id/photos_items_current_img"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>