<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/anwer"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:civ_border_color="#fff"
                app:civ_border_width="2dp"

                />


            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:text="mohamed anwer"
                android:textSize="22dp"
                android:id="@+id/news_items_name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                />

            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="@drawable/post"
                 android:text="aaaaaa"
                android:textSize="20dp"
                android:padding="10dp"
                android:id="@+id/news_items_post_content"
                android:layout_marginLeft="70dp"
                android:drawableLeft="@drawable/posticon"
                android:drawablePadding="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button

                    android:id="@+id/news_items_share"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/post_share"
                    android:text="share"
                    android:textColor="#fff"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>